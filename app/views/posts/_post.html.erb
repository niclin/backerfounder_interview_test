<li>
  <%= render_upvote_link_by_voteable(post) %>
  <%= link_to post.title, post.link_url %></li>
<span>
  <%= post.votes_count %> points by <%= post.user.name %> <%= time_ago_in_words(post.created_at) %> ago
  <%= link_to "| unvote ", upvote_post_path(post), method: :patch if user_signed_in? && current_user.upvoted?(post) %>
  | <%= post.comments.count %>
  <%= link_to 'comments', post_path(post) %>
</span>
